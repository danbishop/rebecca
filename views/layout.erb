<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Dan Bishop">
    <title>Rebec-oke</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="/fontawesome/css/brands.css" rel="stylesheet">
    <link href="/fontawesome/css/solid.css" rel="stylesheet">

    <link href="/DataTables/datatables.min.css" rel="stylesheet"/>
    <link href="/DataTables/css/dataTables.bootstrap5.min.css" rel="stylesheet"/>
 
    <script src="/DataTables/datatables.min.js"></script>
    <script src="/DataTables/js/dataTables.bootstrap5.min.js"></script>

    
    <script type="text/javascript">
      function Play(id) {
        fetch("/play/"+id)
          .then(res => console.log('Success ' + id))
      }
    </script>

  </head>
  <body>

    <header data-bs-theme="dark">
      <nav class="navbar navbar-expand-md navbar-dark sticky-top bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><i class="fa-solid fa-microphone"></i></i> Rebec-oke</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <button type="button" class="btn btn-outline-light"><i class="fa-regular fa-play"></i></button>
            <button type="button" class="btn btn-outline-light"><i class="fa-regular fa-pause"></i></button>
            <button type="button" class="btn btn-outline-light"><i class="fa-regular fa-forward"></i></button>
            <button type="button" class="btn btn-outline-light"><i class="fa-regular fa-stop"></i></i></button>
          </div>
          </div>
        </div>
      </nav>
    </header>


    <main>
      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </main>


    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

      
  </body>
